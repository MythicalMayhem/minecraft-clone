	"version": "0.0.1",
	"configurations": [
		{
			"name": "c++ Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/builds/main",
			"args": [],
			"preLaunchTask": "Build",
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "gdb",
			"windows": {
				"program": "${workspaceRoot}/builds/main",
				"miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe"
			},
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}
